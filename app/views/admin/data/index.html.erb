<!-- Helpers  -->
<%
  # checks if the method is an association, works for :user and :user_id
  def is_assoc?(method)
    @model.reflect_on_association(strip_id(method)).present?
  end

  # removes _id from method
  def strip_id(method)
    method.to_s.gsub('_id', '')
  end

  def assoc_display(object, method)
    # displays the association with one of the methods or by id
    assoc = object.send(strip_id(method))
    display_methods = %i[full_name name last_name title email]
    display_method = display_methods.find {|m| assoc.respond_to?(m)} || :id
    assoc.send(display_method)
  end
 %>
<h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white"><%= @model.to_s.humanize.pluralize %></h1>
</table>
<div class="flex flex-col">
  <div class="overflow-x-auto shadow-md sm:rounded-lg">
    <div class="inline-block min-w-full align-middle">
      <div class="overflow-hidden ">
        <table class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-700">
          <thead class="bg-gray-100 dark:bg-gray-700">
            <tr>
              <% @model.index_methods.each do |method| %>
                <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                  <%= method.to_s.humanize %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
            <% @objects.each do |object| %>
              <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                <% @model.index_methods.each do |method| %>
                  <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%=
                      if is_assoc?(method)
                        link_to assoc_display(object, method) ,admin_data_show_path(resource_name: strip_id(method).pluralize, id: object.send(method))
                      else
                          object.send(method)
                      end
                      %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>